@model Employee.App.Data.Entities.Photo
@{
    ViewBag.Title = "AddPhotos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #card {
        margin-bottom: 300px;
        margin-top: 300px;
    }
</style>
<div class="card" id="card">
    <div class="card-header">
        <h3><span class="fas fa-edit"></span> @ViewBag.Name Adlı Personelin Fotoğrafları Düzenleniyor..</h3>
    </div>
    <form action="/Employee/AddPhotos/" method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="row">
                <input type="hidden" name="id" value="@ViewBag.Id" />
                <div class="col-12 mb-3">
                    <label class="label">Foğraf Seçiniz..</label>
                    <input name="Url" class="form-control p-1" type="file" multiple="multiple" />
                </div>
                <div class="col-12">
                    <button class="btn btn-warning w-100"><span class="fas fa-image"></span> Kaydet</button>
                </div>
            </div>
        </div>

    </form>
</div>

